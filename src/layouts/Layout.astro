---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />

    <meta name="description" content="A Simple Password Generator" />
    <meta
      name="author"
      content="Sebastian Diaz, sebastiandiazdopazo@gmail.com"
    />
    <meta name="copyright" content="Sebastian Diaz" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:image" content="/password_generator.webp" />
    <meta property="og:image:width" content="960" />
    <meta property="og:image:height" content="720" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:email" content="sebastiandiazdopazo@gmail.com" />
    <meta property="og:type" content="website" />
    <meta name="url" content="https://sebadio.github.io/passgen" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex justify-center items-center min-h-screen bg-background">
    <slot />
  </body>
  <script type="text/javascript" src="./zxcvbn.js"></script>
</html>
<style is:global>
  html {
    color-scheme: light dark;
  }
</style>
